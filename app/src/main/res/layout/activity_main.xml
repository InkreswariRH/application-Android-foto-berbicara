<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#074D85"
        android:textColorHint="#074D85"
        android:textSize="24pt"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@android:dimen/app_icon_size"
        app:srcCompat="@mipmap/logo_depan" />

    <Button
        android:id="@+id/bagianTubuh"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/text_margin"
        android:background="#074D85"
        android:gravity="center"
        android:text="Bagian Tubuh"
        android:textColor="#F7F9FA"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/aktivitas"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#1163AC"
        android:text="Aktivitas"
        android:textColor="#F7F9FA"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/keluar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#074D85"
        android:text="Keluar Aplikasi"
        android:textColor="#F7F9FA"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>
